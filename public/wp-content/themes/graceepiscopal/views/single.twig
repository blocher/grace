{% extends "partials/base.twig" %}

{% block template %}




        <!-- BREADCRUMBS -->
    <section class="breadcrumbs_block clearfix parallax" style="background-image: url('{{ post.main_image }}'); ">
      <img src="{{ post.main_image }}" style="visibility: hidden;" />
    </section><!-- //BREADCRUMBS -->

    <div class="single_page">
      <!-- BLOG -->
      <section id="blog">

        <!-- CONTAINER -->
        <div class="container">

          <!-- ROW -->
          <div class="row">

            <!-- BLOG BLOCK -->
            <div class="blog_block col-lg-9 col-md-9">

              <!-- SINGLE BLOG POST -->
              <div class="single_blog_post clearfix" data-animated="fadeInUp">

                {% if post.post_type != 'event' %}
                  <div class="single_blog_post_descr">
                    <div class="single_blog_post_date">{{ post.date }}</div>
                    <div class="single_blog_post_title">{{ post.title }}</div>
                  </div>

                  <div class="single_blog_post_content">
                    <p class="margbot50">{{ post.content }}</p>
                  </div>
                {% else %}
                   <div class="single_blog_post_descr">
                    <div class="single_blog_post_title">{{ post.event_title_use }}</div>
                    <div class="row">
                      <div class="event-info-row">
                        <p><span class="fa fa-calendar fa-inline"></span>&nbsp;&nbsp;{{ post.start_date }}</p>
                        {% if post.all_day == false %}
                           <p><span class="fa fa-clock-o fa-inline"></span>&nbsp;&nbsp;{{ post.start_time}}{% if post.same_start_and_end == false %} to {{ post.end_time}} {% endif %}</p>
                        {% endif %}
                        {% if post.location_use %}
                          <p><span class="fa fa-map-marker fa-inline"></span>&nbsp;&nbsp;{{ post.event_location_use}}</p>
                        {% endif %}
                        {% if post.google_url %}
                          <p><span class="fa fa-external-link fa-inline"></span>&nbsp;&nbsp;<a href="{{ post.google_url}}" target="_blank">View on Google Calendar</a></p>
                        {% endif %}
                      </div>
                    </div>

                  <div class="single_blog_post_content">
                    <p class="margbot50">{{ post.event_description_use|nl2br }}</p>
                  </div>
                {% endif %}

              </div><!-- //SINGLE BLOG POST -->


            </div><!-- //BLOG BLOCK -->


            <!-- SIDEBAR -->
            <div class="sidebar col-lg-3 col-md-3">

            </div><!-- //SIDEBAR -->
          </div><!-- //ROW -->
        </div><!-- //CONTAINER -->
      </section><!-- //BLOG -->
    </div><!-- //PAGE -->
    </div>


{% endblock %}