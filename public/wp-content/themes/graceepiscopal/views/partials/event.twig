<a href="{{ link }}">
  <div class="row hearing post-2004 ai1ec_event type-ai1ec_event status-publish hentry">

    <div class="col-xs-4 event-date center">
      <span class="fa fa-calendar"></span>
      <span class="event-month">{{ month }}</span>
      <span class="event-day">{{ day }}</span>
    </div>

    <div class="col-xs-8 event-details">
      <div class="row event-time-type">
        <span class="event-time"><i class="fa fa-clock-o"></i> {% if all_day %}All Day{% else %}{{ time }}{% endif %}</span>
      </div>

      <div class="row">
        <h3 class="event-title">{{ title }}</h3>
      </div>

    </div>

  </div>
</a>